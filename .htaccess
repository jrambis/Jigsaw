# PHP upload settings (for Apache with mod_php)
<IfModule mod_php.c>
    php_value upload_max_filesize 12M
    php_value post_max_size 15M
    php_value max_file_uploads 5
    php_value memory_limit 128M
    php_value max_execution_time 60
</IfModule>

# For Apache 2.4+ with php-fpm
<IfModule mod_php7.c>
    php_value upload_max_filesize 12M
    php_value post_max_size 15M
</IfModule>

<IfModule mod_php8.c>
    php_value upload_max_filesize 12M
    php_value post_max_size 15M
</IfModule>
